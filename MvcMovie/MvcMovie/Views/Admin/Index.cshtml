@model IEnumerable<MvcMovie.Models.Client>
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}
@{
    ViewBag.Title = "Index";
}

<h2>Clients</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Admin")
    @Html.ActionLink("Search", "SearchIndex", "Clients")

</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.BankMoney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.BankProcents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.CreditMoney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.CreditProcents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.CardID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.PinCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.CardMoney)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.BankMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.BankProcents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.CreditMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.CreditProcents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.CardID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.PinCode)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.State.CreditMoney)
            </td>
            
            <td>
                @Html.ActionLink("Delete", "Delete", new {id = item.ID})
            </td>
        </tr>
    }
</table>
